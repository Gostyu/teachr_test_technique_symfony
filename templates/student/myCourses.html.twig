{% extends "base.html.twig" %}
{% block body %}
	<div class="row">
		<div class="col">
			<h1 class="text-center">{{"Prochain cours : Lundi 23 décembre "}}</h1>
			<div class="row">
				{% for course in courses %}
					<div class="card-deck col-md-6">
						<div class="card my-3">
							<div class="card-body">
								<h5 class="card-title font-weight-bold">{{course.name}}</h5>
								<h6 class="card-subtitle text-muted">
									Prochain cours :
									{% if date(course.startingDay)|date("d-m-Y") == date()|date("d-m-Y") %}
										{{"Aujourd'hui"}}
									{% else %}
										le
										{{date(course.startingDay)|date("d-m-Y")}}
									{% endif %}
								</h6>
								<section class="section my-4">
									<img class="schoolbag" src="data:image/svg+xml;base64,"/>
									{% if course.student != null %}
										<span class="card-text font-weight-bold ">
											{{course.student.firstname}}
										{% else %}
											{{"Thomas"}}
										</span>
									{% endif %}
								</section>
								<section class="section  my-4">
									<img class="calendar" src="data:image/svg+xml;base64,"/>
									<span class="card-subtitle font-weight-bold">Lundi, Mardi, Mercredi, Jeudi, Vendredi, Samedi, Dimanche</span>
									<p class="text-muted">
										A partir de
										{{course.startingDay | date(" D d F")}}
									</p>
								</section>
								<section class="my-4">
									<img class="clock" src="data:image/svg+xml;base64,"/>
									<span class="card-subtitle font-weight-bold">1h30/jour</span>
									<p class="text-muted">A partir de
										{{course.startingDay|date("H:i")}}</p>
								</section>
								<section class="my-4">
									<img class="teacher" src="data:image/svg+xml;base64,"/>
									<span class="card-text">
										{{course.teacher.firstname}}
									</span>
								</section>
								<section class="text-center">
									<a href="" class="btn btn--backgroundcolor btn--textcolor btn-block font-weight-bold">Détails</a>
								</section>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
{% endblock %}
